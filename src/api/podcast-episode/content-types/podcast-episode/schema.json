{
  "kind": "collectionType",
  "collectionName": "podcast_episodes",
  "info": {
    "singularName": "podcast-episode",
    "pluralName": "podcast-episodes",
    "displayName": "Podcast Episode"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "blocks"
    },
    "episodeNumber": {
      "type": "integer"
    },
    "publishedDate": {
      "type": "date"
    },
    "duration": {
      "type": "string"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "buzzsproutEpisodeId": {
      "type": "string"
    },
    "audioUrl": {
      "type": "string"
    },
    "podcastStatus": {
      "type": "enumeration",
      "default": "draft",
      "enum": [
        "draft",
        "published"
      ]
    },
    "transcript": {
      "type": "richtext"
    }
  }
}
