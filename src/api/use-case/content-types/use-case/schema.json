{
  "kind": "collectionType",
  "collectionName": "use_cases",
  "info": {
    "singularName": "use-case",
    "pluralName": "use-cases",
    "displayName": "Use Case"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "summary": {
      "type": "text",
      "maxLength": 280
    },
    "longDescription": {
      "type": "richtext"
    },
    "status": {
      "type": "enumeration",
      "default": "live",
      "enum": [
        "live",
        "beta",
        "concept"
      ]
    },
    "visibility": {
      "type": "enumeration",
      "default": "public",
      "enum": [
        "public",
        "private"
      ]
    },
    "source": {
      "type": "enumeration",
      "default": "internal",
      "enum": [
        "internal",
        "external",
        "partner"
      ]
    },
    "sourceUrl": {
      "type": "string"
    },
    "sourceName": {
      "type": "string"
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "industry": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "problem": {
      "type": "text"
    },
    "approach": {
      "type": "text"
    },
    "outcomes": {
      "type": "text"
    },
    "metrics": {
      "type": "text"
    },
    "keyBenefits": {
      "type": "text"
    },
    "implementationSteps": {
      "type": "text"
    },
    "requirements": {
      "type": "text"
    },
    "limitations": {
      "type": "text"
    },
    "timeline": {
      "type": "string"
    },
    "docsUrl": {
      "type": "string"
    },
    "demoUrl": {
      "type": "string"
    },
    "lastUpdated": {
      "type": "datetime"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag"
    },
    "companies": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::company.company"
    },
    "agents": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::agent.agent"
    },
    "mcpServers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::mcp-server.mcp-server"
    }
  }
}
